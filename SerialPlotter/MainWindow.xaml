<Window x:Class="SerialPlotter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SerialPlotter"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Serial Plotter" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <ComboBox x:Name="portNames" Height="25" Width="300" Margin="10" SelectionChanged="portNames_SelectionChanged" />
                    <Button x:Name="connect" Content="Connect" Height="25"  Margin="10" Padding="15 0" Click="connect_Click"/>
                    <Button x:Name="closePort" Content="Close Port" Height="25"  Margin="10" Padding="15 0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox x:Name="interval" Text="0.01" Width="100" Height="25" Padding="5" />
                    <Button x:Name="recieveData" Content="Get Data" Click="recieveData_Click" Height="25"  Margin="10" Padding="15 0"/>
                </StackPanel>
            </StackPanel>

        </Grid>
        <Grid Grid.Row="1">
            <oxy:Plot Title="{Binding Title}">
                <oxy:Plot.Axes>
                    <oxy:LinearAxis Key="xAxis"
                    IsZoomEnabled="False"
                    IsPanEnabled="False"
                    Position="Bottom"
                    MajorGridlineStyle="Dot"
                    MajorGridlineColor="LightGray"
                    Title="{Binding TitleX}"
                    Minimum="{Binding MinimumX}"
                    Maximum="{Binding MaximumX}"
                    MajorStep="{Binding MajorStepX}"
                    MinorStep="{Binding MinimumStepX}"
                    />

                    <oxy:LinearAxis Key="yAxis"
                    IsZoomEnabled="False"
                    IsPanEnabled="False"
                    Position="Left"
                    MajorGridlineStyle="Dot"
                    MajorGridlineColor="LightGray"
                    Title="{Binding TitleY}"
                    Minimum="{Binding MinimumY}"
                    Maximum="{Binding MaximumY}"
                    MajorStep="{Binding MajorStepY}"
                    MinorStep="{Binding MinimumStepY}"/>

                </oxy:Plot.Axes>

                <oxy:Plot.Series>
                    <oxy:LineSeries 
                        MarkerType="{Binding MarkerTypes}" 
                        ItemsSource="{Binding Points}"
                        StrokeThickness="3"
                        MarkerSize="4"
                        MarkerFill="DarkOrange"
                        LineStyle="{Binding LineStyles}"
                        
                        Color="#42bac3"/>
                </oxy:Plot.Series>
            </oxy:Plot>
        </Grid>
        
    </Grid>
</Window>
